{
  "manifest_version": 3,
  "name": "Inspirational Quote",
  "description": "Get quote every day.",
  "author": "Abdelrahman Hassan",
  "version": "1.0.0",
  "action": {
    "default_popup": "index.html",
    "default_title": "get inspired by quotes"
  },
  "icons": {
    "16": "./images/creativity16.png",
    "48": "./images/creativity48.png",
    "128": "./images/creativity128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js"]
    }
  ]
}
